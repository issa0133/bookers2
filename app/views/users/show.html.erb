<%= render 'users/list', user: @user, book: @book %>
<%= render 'books/new_book', bookes: @bookes %>

  <h2>Books</h2>
    <% @books.each do |book| %>
      <%= link_to user_path(book.user) do %>
        <p><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
      <% end %>
      <p>Title</p>
      <%= link_to book_path(book.id) do %>
        <%= book.title %>
      <% end %>
      <p>Opinion</p>
        <%= book.body %>
    <% end %>
