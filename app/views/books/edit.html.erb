<% if @book.errors.any? %>
  <%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px5 px5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <%= form_with model: @book, local:true do |f| %>
          <div class="form-group">
            <%= f.label :title, "Title" %>
            <%= f.text_field :title, class: "form-control book_title" "border light" %>
          </div>
          <div class="form-group">
            <%= f.label :body, "Opinion" %>
            <%= f.text_area :body, class: "form-control book_title" "border light" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Update Book', class: "btn btn-success" %>
          </div>
        <% end %>
        <%= link_to "Show", book_path(@book) %>
        |
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</main>
