<%= render 'users/list', user: @user, book: @book %>
<%= render 'books/new_book', bookes: @bookes %>

<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <%= link_to user_path(book.user) do %>
    <p><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <% end %>
  <%= link_to book_path(book.id) do %>
    <p>Title: <%= book.title %></p>
  <% end %>
  <p>Opinion: <%= book.body %></p>
  <p>user: <%= book.user.name %></p>
</div>
<% end %>