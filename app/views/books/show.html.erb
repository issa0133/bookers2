<%= render 'users/list', user: @user, book: @book %>

<h1>Book detail</h1>
  <% @books.each do |book| %>
  <div>
    <%= link_to user_path(book.user) do %>
    <p><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
    <%= @book.user.name %>
    <% end %>
    <p>Title</p>
      <%= @book.title %>
    <p><%= @book.body %></p>
      <% if @book.user == current_user %>
        <%= link_to "edit", edit_book_path(@book) %>
        <%= link_to "destroy", book_path(@book), method: :delete %>
      <% end %>
  </div>
  <% end %>