<%= render 'users/list', user: @user, book: @book %>
<%= render 'books/new_book', bookes: @bookes %>

<h1>Book detail</h1>
 <div>Title</div>
    <%= link_to user_path(@user) do %>
      <p><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
      <%= @user.name %>
    <% end %>
    <p>Title</p>
      <%= @book.title %>
    <p><%= @book.body %></p>
      <% if @book.user == current_user %>
        <%= link_to "Edit", edit_book_path(@book) %>
        <%= link_to "Destroy", book_path(@book), method: :delete %>
      <% end %>
  </div>
  